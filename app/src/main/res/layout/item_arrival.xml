<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        style="@style/TextLightRegular"
        android:id="@+id/tvArrivalInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:maxLines="3"
        app:layout_constraintEnd_toStartOf="@id/tvArrivalTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@tools:sample/lorem" />


    <TextView
        style="@style/TextDarkMedium"
        android:id="@+id/tvArrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/tvArrivalInfo"
        app:layout_constraintBottom_toBottomOf="@id/tvArrivalInfo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@tools:sample/date/hhmmss" />

</android.support.constraint.ConstraintLayout>